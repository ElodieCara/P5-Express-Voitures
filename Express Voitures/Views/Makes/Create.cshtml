@model ExpressVoitures.Models.Make

@{
    ViewData["Title"] = "Ajouter une nouvelle marque";
}

<h1>Create</h1>

<h4>Make</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-custom" />
            </div>
        </form>       
    </div>
</div>

<div>
    <a asp-controller="Cars" asp-action="Create">Retour</a> |
    <a asp-action="Index">Voir la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
