@model IEnumerable<ExpressVoitures.Models.Repair>

@{
    ViewData["Title"] = "Liste des réparations";
}

<h1>Liste des réparations</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Car.Year)</th>
            <th>@Html.DisplayNameFor(model => model.Car.Make.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Car.Model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Cost)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Car.Year)</td>
                <td>@Html.DisplayFor(modelItem => item.Car.Make.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Car.Model.Name)</td>                
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@item.Cost.ToString("N2") €</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RepairId" class="btn btn-primary">Modifier</a>
                    <form asp-action="Delete" asp-route-id="@item.RepairId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
