@model IEnumerable<ExpressVoitures.Models.Car>

@{
    ViewData["Title"] = "Gestion des voitures";
}

<h1>Gestion des voitures</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Ajouter une nouvelle voiture</a>
</p>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.VIN)</th>
                <th>@Html.DisplayNameFor(model => model.Year)</th>
                <th>@Html.DisplayName("Make")</th>
                <th>@Html.DisplayName("Model")</th>
                <th>@Html.DisplayNameFor(model => model.Trim)</th>
                <th>@Html.DisplayNameFor(model => model.PurchaseDate)</th>
                <th>@Html.DisplayNameFor(model => model.PurchasePrice)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.AvailabilityDate)</th>
                <th>@Html.DisplayNameFor(model => model.SalePrice)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.PhotoPath)</th>
                <th>@Html.DisplayNameFor(model => model.RepairDescriptions)</th>
                <th>@Html.DisplayNameFor(model => model.TotalRepairCost)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.VIN)</td>
                    <td>@Html.DisplayFor(modelItem => item.Year)</td>
                    <td>@(item.Make != null ? item.Make.Name : "N/A")</td>
                    <td>@(item.Model != null ? item.Model.Name : "N/A")</td>
                    <td>@Html.DisplayFor(modelItem => item.Trim)</td>
                    <td>@item.PurchaseDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.PurchasePrice.ToString("N2") €</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@item.AvailabilityDate.ToString("yyyy-MM-dd")</td>
                    <td>@(item.SalePrice.HasValue ? item.SalePrice.Value.ToString("N2") + " €" : "N/A")</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                        @if (item.Status == "Vendu")
                        {
                            <div>le : @(item.SaleDate.HasValue ? item.SaleDate.Value.ToString("yyyy-MM-dd") : "N/A")</div>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PhotoPath))
                        {
                            <img src="@item.PhotoPath" alt="Photo" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                        }
                    </td>
                    <td>@item.RepairDescriptions</td>
                    <td>@item.TotalRepairCost.ToString("N2") €</td>
                    <td class="d-flex flex-column align-items-center">
                        <a asp-action="Edit" asp-route-id="@item.CarId" class="btn btn-primary btn-sm mb-2">Modifier</a>
                        <form asp-action="Delete" asp-route-id="@item.CarId" method="post" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette voiture ?');">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
